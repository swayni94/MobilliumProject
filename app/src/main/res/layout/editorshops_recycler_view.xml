<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="190dp"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp">


    <TextView
        android:id="@+id/editor_shop_recyclerView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/editor_shop_recyclerView_definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:id="@+id/editor_shop_recyclerView_Image1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:ignore="ContentDescription"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/editor_shop_recyclerView_Image2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:ignore="ContentDescription"
        android:layout_marginTop="80dp"
        android:layout_marginStart="70dp"/>

    <ImageView
        android:id="@+id/editor_shop_recyclerView_Image3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:ignore="ContentDescription"
        android:layout_marginTop="80dp"
        android:layout_marginStart="130dp"/>

</androidx.cardview.widget.CardView>